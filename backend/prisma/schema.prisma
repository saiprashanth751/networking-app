generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  firstName String
  lastName String?
  email String @unique
  password String
  profile Profile?
  createdAt DateTime @default(now())
}

model Profile {
  id String @id @default(uuid())
  bio String?
  profilePic String?
  department String
  graduationYear Int
  minor String
  linkedin String?
  github String?
  user User @relation(fields: [userId], references: [id])
  userId String @unique
  createdAt DateTime @default(now())
}